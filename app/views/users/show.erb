<!-- Page Header -->
<header class="masthead" style="background-image: url('img/recipes-bg.jpeg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%=@user.username%>'s </h1>
          <span class="subheading">Delicious recipes!</span>
        </div>
      </div>
    </div>
  </div>
</header>



<% @recipes.each_with_index do |recipe, index| %>
    <h3><%= recipe.title%></h3>
    <p><%= recipe.instructions%></p>
<% end %>
