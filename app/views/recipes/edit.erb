
<form action="/recipes/<%= @recipe.recipe_slug %>/edit" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1>Recipe Name <%=@recipe.title%></h1>
  <input id="title" name="title" value="<%=@recipe.title%>">
  <p>Recipe Ingredients </p>
  <input id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>">
  <p>Recipe Instructions </p>
  <input id="instructions" name="instructions" value="<%=@recipe.instructions%>">

 
  <input type="submit" value="submit">
</form>
