<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
          <h2 class="post-title">
            <%= @recipe.title %>
          </h2>
          <p class="post-title">
            <b>
              <%= @recipe.ingredients %>
            </b>
          </p>
          <p class="post-subtitle">
            <%= @recipe.instructions %>
          </p>
      </div>
      <hr>
      <!-- Pager -->
      <form action="/recipes/<%= @recipe.recipe_slug %>/edit">
        <input type="submit" value="Edit Recipe"  class="btn btn-primary float-right">
      </form>

      <form action="/recipes/<%= @recipe.recipe_slug %>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <div class="clearfix">
          <input type="submit" value="Delete Recipe"  class="btn btn-primary float-right">
        </div>
      </form>
    </div>
  </div>
</div>
